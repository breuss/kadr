<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="bsa.jpa.kadr1" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<non-jta-data-source>kadr1</non-jta-data-source>
		<class>model.Naznach</class>
		<class>model.Oplata</class>
		<class>model.Pdata</class>
		<class>model.Person</class>
		<class>model.Priem</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/kadr1"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
		</properties>
	</persistence-unit>
</persistence>
